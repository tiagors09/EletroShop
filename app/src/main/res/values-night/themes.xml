<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.EletroShop" parent="Theme.Material3.DayNight.NoActionBar"/>
  
    <!-- Customize your light theme here. -->
    <style name="backgroundColor">
        <item name="android:background">@color/gray_background</item>
    </style>

    <style name="inputColor">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:strokeColor">@color/white</item>
    </style>

    <style name="textButtonColor">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textPlaceholderColor">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="buttonEdit">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:iconTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RoundedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="shapeAppearanceOverlay">@style/RoundedCorners</item>
    </style>

    <style name="RoundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item> <!-- Raio dos cantos em dp -->
    </style>
</resources>