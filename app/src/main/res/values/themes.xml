    <style name="Base.Theme.EletroShop" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/lime</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorAccent">@color/lime_focus</item>
        <item name="android:statusBarColor">@color/lime</item>
